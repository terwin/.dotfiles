snippet sub "Fortran sububroutine" !b
subroutine ${1:name}($2)

	continue

	${0:${VISUAL}}

end subroutine $1
endsnippet

snippet fun "Fortran function" !b
function ${1:name}($2)

	continue

	${0:${VISUAL}}

end function $1
endsnippet

snippet if "Fortran if" !b
if ($1) then
	${0:${VISUAL}}
end if
endsnippet

snippet do "Fortran do loop" !b
do ${1:i} = ${2:1}, ${3:n}
	${0:${VISUAL}}
end do
endsnippet
